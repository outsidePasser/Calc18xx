<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/root_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvResult"
            style="@style/ResultRowStyle"
        />

        <TextView
            android:id="@+id/tvExpression"
            style="@style/ExpressionRowStyle"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTen"
                style="@style/NumberButtonStyle"
                android:text="10" />

            <TextView
                android:id="@+id/tvTwenty"
                style="@style/NumberButtonStyle"
                android:text="20" />

            <TextView
                android:id="@+id/tvThirty"
                style="@style/NumberButtonStyle"
                android:text="30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvForty"
                style="@style/NumberButtonStyle"
                android:text="40" />

            <TextView
                android:id="@+id/tvFifty"
                style="@style/NumberButtonStyle"
                android:text="50" />

            <TextView
                android:id="@+id/tvSixty"
                style="@style/NumberButtonStyle"
                android:text="60" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeventy"
                style="@style/NumberButtonStyle"
                android:text="70" />

            <TextView
                android:id="@+id/tvEighty"
                style="@style/NumberButtonStyle"
                android:text="80" />

            <TextView
                android:id="@+id/tvNinety"
                style="@style/NumberButtonStyle"
                android:text="90" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOneHundred"
                style="@style/NumberButtonStyle"
                android:text="100" />

            <TextView
                android:id="@+id/tvClear"
                style="@style/NumberButtonStyle"
                android:text="Clear" />

            <TextView
                android:id="@+id/tvBackup"
                style="@style/NumberButtonStyle"
                android:text="X" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPayout"
            style="@style/CalculateButtonStyle"
            android:text="Pay Out"
        />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>